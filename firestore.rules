rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Función para verificar si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Función para verificar si el usuario es el propietario de la tienda
    function isStoreOwner(storeId) {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
    }

    // Reglas para la colección de tiendas
    match /stores/{storeId} {
      allow read: if true; // Lectura pública
      allow create: if isAuthenticated() && 
        request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isStoreOwner(storeId);
    }

    // Reglas para la colección de productos
    match /products/{productId} {
      allow read: if true; // Lectura pública
      allow create: if isAuthenticated() && 
        exists(/databases/$(database)/documents/stores/$(request.resource.data.storeId)) &&
        isStoreOwner(request.resource.data.storeId);
      allow update, delete: if isAuthenticated() && 
        exists(/databases/$(database)/documents/stores/$(resource.data.storeId)) &&
        isStoreOwner(resource.data.storeId);
    }

    // Reglas para la colección de pedidos
    match /orders/{orderId} {
      allow read: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || 
         isStoreOwner(resource.data.storeId));
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || 
         isStoreOwner(resource.data.storeId));
    }
  }
} 